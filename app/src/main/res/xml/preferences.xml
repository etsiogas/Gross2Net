<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto" >
  <PreferenceCategory
    android:title="Settings"
    android:layout="@layout/mylayout" >
    
    <MultiSelectListPreference
      app:iconSpaceReserved="false"
      android:entries="@array/currencies"
      android:entryValues="@array/currency_codes"
      android:defaultValue="@array/default_currency"
      android:key="currencies_preference"
      android:title="Currencies" />
    
    <EditTextPreference
      app:iconSpaceReserved="false"
      android:inputType="numberDecimal"
      android:key="income_tax_preference"
      android:defaultValue="20"
      android:selectAllOnFocus="true"
      android:singleLine="true"
      android:title="Income tax" />
    
    <EditTextPreference
      app:iconSpaceReserved="false"
      android:inputType="numberDecimal"
      android:key="insurance_tax_preference"
      android:defaultValue="10"
      android:selectAllOnFocus="true"
      android:singleLine="true"
      android:title="Insurance tax" />
    
    <EditTextPreference
      app:iconSpaceReserved="false"
      android:inputType="numberDecimal"
      android:key="other_tax_preference"
      android:defaultValue="0"
      android:selectAllOnFocus="true"
      android:singleLine="true"
      android:title="Other tax" />
    
    <EditTextPreference
      app:iconSpaceReserved="false"
      android:inputType="numberDecimal"
      android:key="vat_preference"
      android:defaultValue="24"
      android:selectAllOnFocus="true"
      android:singleLine="true"
      android:title="VAT" />
  </PreferenceCategory>
</PreferenceScreen>
